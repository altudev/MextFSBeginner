@using MextFSBeginner.WasmClient.Enums
<button class="@GetCSS()" @onclick="HandleButtonOnClick">@Title</button>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter] public string CSS { get; set; }

    [Parameter] public ButtonSizeType SizeType { get; set; } = ButtonSizeType.Medium;

    [Parameter] public ButtonColourType ColourType { get; set; } = ButtonColourType.Primary;

    [Parameter] public EventCallback OnClickCallback { get; set; }

    public string InnerCSS { get; set; } = string.Empty;


    private async Task HandleButtonOnClick()
    {
        await OnClickCallback.InvokeAsync();
    }

    private string GetCSS()
    {
        InnerCSS = string.Empty;

        InnerCSS += CSS;

        InnerCSS += " btn";

        // text-center

        switch (SizeType)
        {
            case ButtonSizeType.Small:
                InnerCSS += $" btn-sm";
                break;

            case ButtonSizeType.Large:
                InnerCSS += $" btn-lg";
                break;

            case ButtonSizeType.Medium:
            default:
                break;
        }

        // text-center btn-sm btn btn-danger
                            //Danger
